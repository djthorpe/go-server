{
    "name": "@mutablelogic/go-server-router",
    "version": "0.0.0",
    "description": "go-server router frontend",
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -fr dist && install -d html assets/favicon dist/assets && cp -r html/* dist && cp -r assets/* dist/assets && esbuild js/index.js --loader:.ttf=file --format=esm --minify --bundle --outdir=dist --sourcemap",
        "watch": "npm-watch"
    },
    "watch": {
        "build": {
            "patterns": [
                "css",
                "html",
                "js"
            ],
            "extensions": "html,css,js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mutablelogic/go-server.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "author": "David Thorpe",
    "bugs": {
        "url": "https://github.com/mutablelogic/go-server/issues"
    },
    "homepage": "https://github.com/mutablelogic/go-server#readme",
    "files": [
        "dist/**/*.{js,map,woff,woff2,txt,ttf,css,html,jpg,jpeg,png,gif,svg}"
    ],
    "dependencies": {
        "esbuild": "^0.16.12"
    }
}
