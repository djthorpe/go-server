{
    "var": {
        "nginx-binary": "/usr/local/bin/nginx",
        "nginx-data": "/var/run/nginx",
        "nginx-group": "nginx"
    },
    "logger.main": {
        "flags": [
            "default",
            "prefix"
        ]
    },
    "nginx-handler.main": {
        "binary": "${ var.nginx-binary }",
        "data": "${ var.nginx-data }",
        "group": "${ var.nginx-group }"
    },
    "tokenjar-handler.main": {
        "data": "run",
        "writeinterval": "30s"
    },
    "auth-handler.main": {
        "tokenjar": "${ resource.tokenjar-handler.main }",
        "tokenbytes": 16,
        "bearer": true
    },
    "router.main": {
        "services": {
            "nginx": {
                "service": "${ resource.nginx-handler.main }",
                "middleware": [
                    "logger",
                    "auth"
                ]
            },
            "auth": {
                "service": "${ resource.auth-handler.main }",
                "middleware": [
                    "logger",
                    "auth"
                ]
            },
            "router": {
                "service": "${ resource.router.main }",
                "middleware": [
                    "logger",
                    "auth"
                ]
            }
        }
    },
    "httpserver": {
        "listen": "run/go-server.sock",
        "group": "nginx",
        "router": "${ resource.router.main }"
    }
}